{
	"manifest_version": 2,
	"name": "Bergamot Translations",
	"version": "0.0.1",
	"version_name": "development",
	"browser_specific_settings":
	{
		"gecko":
		{
			"strict_min_version": "90.0"
		}
	},
	"permissions":
	[
		"<all_urls>"
	],
	"content_scripts":
	[
		{
			"matches":
			[
				"<all_urls>"
			],
			"js":
			[
				"content-script.js"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
	"incognito": "spanning"
}